<html xmlns="http://www.w3.org/1999/xhtml" ng-app="PetShopApp">
<head>
    <title>Pet shop</title>

</head>
<body ng-controller="petListController as controller"  >

    <h2>Pets</h2>
    <ul>
        <li ng-repeat="pet in controller.pets">{{pet.name}} img: <img ng-src="{{pet.pic}}" height="42" width="42"></li>
    </ul>

    <script src="~/lib/angular/angular.js"></script>
    <script src="~/MyAppJs/app.js"></script>
    <script src="~/MyAppJs/controllers.js"></script>
</body>
</html>

